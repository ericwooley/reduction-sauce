{
  "parser"  : "babel-eslint",
  "extends" : [
    "standard",
    "standard-react"
  ],
  "globals": {
    "expect": true,
    "mock": true,
    "sandbox": true,
    "spy": true,
    "stub": true,
    "useFakeServer": true,
    "useFakeTimers": true,
    "useFakeXMLHttpRequest": true
  },
  "env": {
    "browser" : true
  },
  "rules": {
    "semi" : [2, "never"],
    "max-len": [2, 120, 2],
    "react/jsx-no-bind": 0
  }
}
